      "label": "Newsletter Title",
      "default": "NEWSLETTER"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 28
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "Input Placeholder",
      "default": "Enter Email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SUBSCRIBE"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#D7953F"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "newsletter_box_width",
      "min": 150,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Newsletter Box Width",
      "default": 270
    },
    {
      "type": "range",
      "id": "newsletter_box_height",
      "min": 60,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Newsletter Box Height",
      "default": 80
    },
    {
      "type": "text",
      "id": "social_heading",
      "label": "Social Heading",
      "default": "FOLLOW US"
    },
    {
      "type": "range",
      "id": "social_heading_size",
      "min": 14,
      "max": 36,
      "step": 2,
      "unit": "px",
      "label": "Social Heading Font Size",
      "default": 20
    },
    {
      "type": "color",
      "id": "icon_bg",
      "label": "Icon Background",
      "default": "#D7953F"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "text",
      "id": "twitter_link",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "youtube_link",
      "label": "YouTube URL"
    
    },
    {
      "type": "text",
      "id": "instagram_link",
      "label": "Instagram URL"
    }
  ],
  "presets": [
    {
      "name": "Extended Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
