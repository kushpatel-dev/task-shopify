<section 
  class="w-full py-8"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
>
  <div class="container mx-auto px-6 flex flex-col lg:flex-row items-center justify-between gap-8">

    <!-- Newsletter Left -->
    <div class="flex flex-col" style="width:{{ section.settings.newsletter_box_width }}px; height:{{ section.settings.newsletter_box_height }}px;">
      <p class="uppercase text-sm" style="color: {{ section.settings.text_color }}; font-family: {{ section.settings.font_family }};">
        {{ section.settings.newsletter_subtitle }}
      </p>
      <h2 
        class="tracking-wide font-extrabold" 
        style="font-size: {{ section.settings.heading_size }}px; font-family: {{ section.settings.font_family }};color: {{ section.settings.text_color }};"
      >
        {{ section.settings.newsletter_title }}
      </h2>
    </div>

    <!-- Newsletter Form -->
    <form method="post" action="{{ routes.newsletter_subscribe_url }}" class="flex w-full max-w-lg rounded-full overflow-hidden shadow-lg">
      <input 
        type="email" 
        name="contact[email]" 
        placeholder="{{ section.settings.input_placeholder }}"
        required
        class="flex-grow px-4 py-3 text-gray-800 bg-amber-50 focus:outline-none"
      >
      <button 
        type="submit" 
        class="px-6 py-3 font-semibold transition-all"
        style="background-color: {{ section.settings.button_bg }}; color: {{ section.settings.button_text_color }}; font-family: {{ section.settings.font_family }};"
      >
        {{ section.settings.button_label }}
      </button>
    </form>

    <!-- Social Media Icons -->
    <div class="flex items-center gap-4">
      <span 
        class="text-xl font-bold"
        style="font-size: {{ section.settings.social_heading_size }}px; font-family: {{ section.settings.font_family }};"
      >
        {{ section.settings.social_heading }}
      </span>
      <div class="flex gap-3">
        {% if section.settings.facebook_link != blank %}
          <a href="{{ section.settings.facebook_link }}" target="_blank" class="w-10 h-10 rounded-full grid place-items-center transition"
            style="background-color: {{ section.settings.icon_bg }}; color: {{ section.settings.icon_color }};"
          >
            <i class="fab fa-facebook-f"></i>
          </a>
        {% endif %}
        {% if section.settings.twitter_link != blank %}
          <a href="{{ section.settings.twitter_link }}" target="_blank" class="w-10 h-10 rounded-full grid place-items-center transition"
            style="background-color: {{ section.settings.icon_bg }}; color: {{ section.settings.icon_color }};"
          >
            <i class="fab fa-twitter"></i>
          </a>
        {% endif %}
        {% if section.settings.youtube_link != blank %}
          <a href="{{ section.settings.youtube_link }}" target="_blank" class="w-10 h-10 rounded-full grid place-items-center transition"
            style="background-color: {{ section.settings.icon_bg }}; color: {{ section.settings.icon_color }};"
          >
            <i class="fab fa-youtube"></i>
          </a>
        {% endif %}
        {% if section.settings.instagram_link != blank %}
          <a href="{{ section.settings.instagram_link }}" target="_blank" class="w-10 h-10 rounded-full grid place-items-center transition"
            style="background-color: {{ section.settings.icon_bg }}; color: {{ section.settings.icon_color }};"
          >
            <i class="fab fa-instagram"></i>
          </a>
        {% endif %}
      </div>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Extended Footer",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#372E2D"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "font_picker",
      "id": "font_family",
      "label": "Font Family",
      "default": "sans-serif"
    },
    {
      "type": "text",
      "id": "newsletter_subtitle",
      "label": "Newsletter Subtitle",
      "default": "Subscribe to our"
