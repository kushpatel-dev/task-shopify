{% schema %}
  {
    "name": "Brush Gradient Content",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      }, {
        "type": "image_picker",
        "id": "brush_top",
        "label": "Top Brush Effect"
      }, {
        "type": "image_picker",
        "id": "brush_bottom",
        "label": "Bottom Brush Effect"
      }
    ],
    "blocks": [
      {
        "type": "content_block",
        "name": "Content Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "block_image",
            "label": "Block Image"
          }, {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "FROM OUR FAMILY TO YOURS"
          }, {
            "type": "textarea",
            "id": "summary",
            "label": "Summary",
            "default": "We source only the best beans and build lasting relationships with farmers."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brush Gradient Content",
        "category": "Custom Sections"
      }
    ]
  }
{% endschema %}
<section class="relative w-full overflow-hidden">
  {%- assign bg = section.settings.background_image -%}

  <!-- Layer 1: Background image -->
  {% if bg != blank %}
    <div class="absolute inset-0 -z-2">
      <img
        height=""
        width=""
        src="{{ bg | image_url: width: 2400 }}"
        alt=""
        class="w-full h-full object-cover pointer-events-none select-none"
        decoding="async"
        loading="lazy">
    </div>
  {% endif %}


  <!-- Gradient Overlay -->
  <div class="absolute inset-0 -z-1 pointer-events-none ctm-grediant">&nbsp;</div>

  <!-- Layer 3: Brush Top -->
  {% if section.settings.brush_top != blank %}
    <img
      height=""
      width=""
      src="{{ section.settings.brush_top | image_url: width: 2400 }}"
      alt="brush-top"
      class="absolute top-0 left-0 w-full h-auto z-0 pointer-events-none select-none"
      decoding="async"
      loading="lazy">
  {% endif %}

  <!-- Layer 4: Content -->
  <div class="relative z-0 max-w-[1200px] mx-auto px-6 py-16 md:py-24 min-h-[380px] flex justify-end">
    <div class="w-full md:w-1/2 flex flex-col gap-10 my-auto">
      {% for block in section.blocks %}
        <div class="flex flex-col gap-4 p-2" {{ block.shopify_attributes }}>
          {% if block.settings.block_image != blank %}
            <img
              height=""
              width=""
              src="{{ block.settings.block_image | image_url: width: 160 }}"
              alt=""
              class="w-16 h-16 object-contain"
              decoding="async"
              loading="lazy">
          {% endif %}
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900">{{ block.settings.heading }}</h2>
          <h2 class="text-lg md:text-5xl font-semibold text-gray-700">From Our Family to Yours</h2>
          <p class="text-base md:text-lg text-gray-800">{{ block.settings.summary }}</p>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Layer 3: Brush Bottom -->
  {% if section.settings.brush_bottom != blank %}
    <img
      height=""
      width=""
      src="{{ section.settings.brush_bottom | image_url: width: 2400 }}"
      alt="brush-bottom"
      class="absolute bottom-0 left-0 w-full h-auto z-1 pointer-events-none select-none"
      decoding="async"
      loading="lazy">
  {% endif %}
</section>